{% extends "layout.html.twig" %}

{% block content %}
    <ul id="content" class="user-list">
        {% for user in users %}
            <div class="panel panel-primary">
                    <div class="panel-heading">Name: {{ user.lastName }} {{ user.firstName }} {{ user.patronymic }}</div>
                    <div class="panel-body">
                        <button class="delete-button" value="{{ user.id }}">&times;</button>
                        Date of birth: {{ user.birth }}<br>
                        Place of birth: {{ user.placeOfBirth }}<br>
                        Passport: {{ user.passportSeries }}{{ user.passportNumber }}, {{ user.passportFrom }}, date: {{ user.passportDate }}<br>
                        City: {{ user.city_name }}<br>
                        <a class="btn btn-primary" href="update_form.php?id={{ user.id }}">Edit</a>
                    </div>
            </div>
        {% endfor %}
    </ul>

    <script src="../../lib/jquery-3.1.0.min.js"></script>
    <script src="../../js/delete_user.js"></script>
    <script>
        $('.delete-button').on('click', deleteUser);
    </script>
{% endblock %}
